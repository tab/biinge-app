root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 80
ij_html_space_inside_empty_tag = true

[{*.ats,*.cts,*.mts,*.ts,*.tsx}]
ij_typescript_force_semicolon_style = true
ij_typescript_use_semicolon_after_statement = false
ij_typescript_enforce_trailing_comma = whenmultiline
ij_typescript_spaces_within_imports = true
ij_typescript_spaces_within_object_literal_braces = true
ij_typescript_use_double_quotes = true
ij_typescript_imports_wrap = on_every_item
ij_typescript_import_sort_members = false # Should be "true". "false" is here to keep current files
ij_typescript_align_multiline_parameters = false
ij_typescript_union_types_wrap = normal

[{*.cjs,*.js}]
ij_javascript_force_semicolon_style = true
ij_javascript_use_semicolon_after_statement = false
ij_javascript_enforce_trailing_comma = whenmultiline
ij_javascript_spaces_within_imports = true
ij_javascript_spaces_within_object_literal_braces = true
ij_javascript_use_double_quotes = true
ij_javascript_imports_wrap = on_every_item
ij_javascript_import_sort_members = false # Should be "true". "false" is here to keep current files
ij_javascript_align_multiline_parameters = false
ij_javascript_union_types_wrap = normal
